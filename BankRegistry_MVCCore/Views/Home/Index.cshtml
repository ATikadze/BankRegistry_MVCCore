@using BankRegistry_MVCCore.Models;
@model List<BankModel>
@{
    //ViewData["Title"] = "Index";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Image</th>
            <th scope="col">Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bM in Model.Select((v, i) => new { v, i }))
        {
        <tr class="onHoverBtn">
            <td class="bankContainer" onclick="window.location.href='@Url.Action("New", "Bank", new { bankId = bM.v.ID })'">@bM.i</td>
            <td class="bankContainer" onclick="window.location.href='@Url.Action("New", "Bank", new { bankId = bM.v.ID })'"><img src="@bM.v.URL" width="50" height="50" /></td>
            <td class="bankContainer" onclick="window.location.href='@Url.Action("New", "Bank", new { bankId = bM.v.ID })'">@bM.v.Name</td>
            <td style="text-align: right">@Html.ActionLink("Remove", "Index", "Home", new { text = (string)null,  id = bM.v.ID, remove = true }, new { @class = "btn btn-outline-danger" })</td>
        </tr>
        }
    </tbody>
</table>

@section SearchSection {
    <div class="collapse navbar-collapse" id="navbarColor02">
        <div style="margin-left: auto;">
            <form class="form-inline my-2 my-lg-0">
                @using (Html.BeginForm("Index", "Home"))
                {
                    <input class="form-control mr-sm-2" id="txtSearch" name="text" placeholder="Search">
                    <button class="btn btn-secondary my-2 my-sm-0" type="submit" style="margin: 0 5px">Search</button>
                }
            </form>
        </div>
    </div>
}